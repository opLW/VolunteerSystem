<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.oplw.volunteersystem.CustomBanner
        android:id="@+id/content_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_banner">

        <include layout="@layout/item_general"/>
        <include layout="@layout/item_general"/>
        <include layout="@layout/item_general"/>
        <include layout="@layout/item_general"/>
    </com.oplw.volunteersystem.CustomBanner>

    <TextView
        android:id="@+id/content_child_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="@string/title_child"
        android:textSize="@dimen/text_min_size"
        android:textColor="@color/colorTextDark"
        app:layout_constraintTop_toBottomOf="@id/content_banner"/>

    <RelativeLayout
        android:id="@+id/content_child_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_child_title"
        app:layout_constraintEnd_toStartOf="@id/divider_1">

        <ImageView
            android:id="@+id/content_iv_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_first_item"
            android:padding="5dp"
            android:src="@drawable/ic_introduce" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_iv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/title_first_item"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_min_size" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/content_child_title"
        app:layout_constraintBottom_toTopOf="@id/divider_4"
        app:layout_constraintEnd_toStartOf="@id/content_child_item_2"
        app:layout_constraintStart_toEndOf="@id/content_child_item_1"/>

    <RelativeLayout
        android:id="@+id/content_child_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/content_child_title"
        app:layout_constraintEnd_toStartOf="@id/divider_2"
        app:layout_constraintStart_toEndOf="@id/divider_1">

        <ImageView
            android:id="@+id/content_iv_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_second_item"
            android:padding="5dp"
            android:src="@drawable/ic_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_iv_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/title_second_item"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_min_size" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_2"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/content_child_title"
        app:layout_constraintBottom_toTopOf="@id/divider_4"
        app:layout_constraintEnd_toStartOf="@id/content_child_item_3"
        app:layout_constraintStart_toEndOf="@id/content_child_item_2"/>

    <RelativeLayout
        android:id="@+id/content_child_item_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/content_child_title"
        app:layout_constraintEnd_toStartOf="@id/divider_3"
        app:layout_constraintStart_toEndOf="@id/divider_2">

        <ImageView
            android:id="@+id/content_iv_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_third_item"
            android:padding="5dp"
            android:src="@drawable/ic_video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_iv_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/title_third_item"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_min_size" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_3"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toStartOf="@+id/content_child_item_4"
        app:layout_constraintStart_toEndOf="@id/content_child_item_3"
        app:layout_constraintBottom_toTopOf="@id/divider_4"
        app:layout_constraintTop_toBottomOf="@id/content_child_title" />

    <RelativeLayout
        android:id="@+id/content_child_item_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider_3"
        app:layout_constraintTop_toBottomOf="@id/content_child_title">

        <ImageView
            android:id="@+id/content_iv_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_fourth_item"
            android:padding="5dp"
            android:src="@drawable/ic_recruit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_iv_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/title_fourth_item"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_min_size" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@id/content_child_item_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="3dp"
        android:padding="2dp"
        android:background="@drawable/bg_general_item"
        android:text="@string/title_volunteer_garden"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_mid_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_4" />
</androidx.constraintlayout.widget.ConstraintLayout>