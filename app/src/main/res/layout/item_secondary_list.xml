<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/activity_h_min_margin"
    android:paddingEnd="@dimen/activity_h_min_margin"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/secondary_iv"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@drawable/pic_1" />

    <TextView
        android:id="@+id/secondary_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_min_size"
        app:layout_constraintBottom_toTopOf="@+id/secondary_title_tv"
        app:layout_constraintEnd_toEndOf="@+id/secondary_iv"
        tools:text="2019年7月14日" />

    <TextView
        android:id="@+id/secondary_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_secondary_bottom"
        android:ellipsize="end"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_v_min_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_v_min_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_mid_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondary_iv"
        tools:text="学雷锋行动" />
</androidx.constraintlayout.widget.ConstraintLayout>