<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_v_min_margin"
    android:layout_marginTop="@dimen/activity_v_min_margin"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_v_min_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_title_mask">

        <TextView
            android:id="@+id/article_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/article_date_tv"
            android:layout_marginEnd="@dimen/activity_h_min_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_mid_size"
            android:textStyle="bold"
            tools:text="志愿者活动招募" />

        <TextView
            android:id="@+id/article_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorText"
            tools:text="2019/7/4"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>