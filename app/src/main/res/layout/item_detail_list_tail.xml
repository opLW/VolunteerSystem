<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_v_min_margin">

    <TextView
        android:id="@+id/detail_list_tail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/text_mid_size"
        app:layout_constraintBottom_toBottomOf="@id/detail_list_tail_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/detail_list_tail_progress_bar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="加载更多..." />

    <ProgressBar
        android:id="@+id/detail_list_tail_progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/detail_list_tail_tv"
        tools:layout_editor_absoluteY="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>