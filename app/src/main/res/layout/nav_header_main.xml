<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_side_nav_bar"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:paddingTop="@dimen/activity_v_min_margin"
        app:srcCompat="@drawable/ic_head_image" />

    <TextView
        android:id="@+id/nav_header_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_email_tv"
        android:layout_alignStart="@+id/nav_header_email_tv"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/text_mid_size"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        tools:text="opLW"/>

    <TextView
        android:id="@+id/nav_header_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nav_header_imageView"
        android:layout_above="@id/nav_header_switch_user_btn"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/text_min_size"
        android:textColor="@color/colorText"
        tools:text="793865766@qq.com"/>

    <Button
        android:id="@+id/nav_header_switch_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:minHeight="0dp"
        android:padding="5dp"
        android:shadowDx="16"
        android:shadowDy="16"
        android:background="@drawable/bg_common_btn"
        android:text="@string/action_switch_user"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_min_size" />
</RelativeLayout>
